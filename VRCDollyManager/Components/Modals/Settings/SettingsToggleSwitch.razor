<div class="settings-toggle-switch-container">
    <label class="settings-toggle-switch-label">@Label</label>
    <div class="settings-toggle-switch-input">
        <input type="checkbox" checked="@Value" disabled="@(Disabled)" @onclick:preventDefault  @onclick="OnClick" />
    </div>
</div>

@code {
    [Parameter] public string Label { get; set; } = string.Empty;
    [Parameter] public bool Value { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public EventCallback<bool> ValueChanged { get; set; }

    private void OnClick(MouseEventArgs e)
    {
        ValueChanged.InvokeAsync(!Value);
    }
}